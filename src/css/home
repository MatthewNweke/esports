@keyframes rotate-in {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(180deg);
  }
}

@keyframes rotate-out {
  0% {
    transform: rotate(180deg);
  }
  100% {
    transform: rotate(0deg);
  }
}

.animate-rotate {
  animation: rotate-in 0.3s forwards;
}

.animate-rotate-out {
  animation: rotate-out 0.3s forwards;
}
